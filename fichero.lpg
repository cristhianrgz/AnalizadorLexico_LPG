programa circunferencia (ent r,ent h=0,ent k=0,ent r=0,ent g=0,ent b=0){
    LGColor3f(r,g,b);
    ent x = 0;
    ent y = r;
    ent dpk = 3 - 2*r;
    LGEmpezar(LG_Puntos);
    hacer{
        LGVertice2i(-y+h,x+k);
        LGVertice2i(y+h,x+k);
        LGVertice2i(y+h,-x+k);
        LGVertice2i(-y+h,-x+k);
        LGVertice2i(x+h,y+k);
        LGVertice2i(x+h,-y+k);
        LGVertice2i(-x+h,-y+k);
        LGVertice2i(-x+h,y+k);
        si(dpk >= 0){
            dpk += 4*(x-y) + 10;
            y -=1;
        }
        sino{
            dpk = dpk + 4*x + 6;
        x += 1;
        }
    } mientras (x <= y);
    LGTerminar();
  }  
programa frec(ent r,ent h=0,ent k=0,ent r=0,ent g=0,ent b=0){
    LGColor3f(r,g,b);
    ent x = 0;
    ent y = r;
    ent dpk = 3 - 2*r;
    LGEmpezar(LG_Puntos);
    hacer{
        LGVertice2i(x+h,y+k);
        LGVertice2i(-x+h,y+k);
        si(dpk >= 0){
            dpk += 4*(x-y) + 10;
            y -=1;
        }sino{
            dpk = dpk + 4*x + 6;
        x += 1;
    }
    } mientras (x <= y);
    LGTerminar()

